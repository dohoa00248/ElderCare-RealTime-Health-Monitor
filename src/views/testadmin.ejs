<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <script src="/js/jquery-3.7.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>

<body>
    <!-- <%= JSON.stringify(users) %> -->
    <div class="container">
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">Admin</div>
            <div class="col-md-10">
                <a href="/api/v1/user/create" class="btn btn-primary">Add User</a>
                <a href="/" class="btn btn-danger ms-2" style="text-align: right;">Logout</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2" style="text-align: center;">Dashboard</div>
            <div class="col-md-10">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Username</th>
                                <th>Password</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Created At</th>
                                <th>Updated At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user=> { %>
                                <tr>
                                    <td>
                                        <%= user._id %>
                                    </td>
                                    <td>
                                        <%= user.username %>
                                    </td>
                                    <td>
                                        <%= user.password %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.role %>
                                    </td>
                                    <td>
                                        <%= new Date(user.createdAt).toLocaleString() %>
                                    </td>
                                    <td>
                                        <%= new Date(user.updatedAt).toLocaleString() %>
                                    </td>
                                    <td>
                                        <a href="/api/v1/user/update/<%= user._id %>"
                                            class="btn btn-warning edit-btn">Edit</a>
                                        <!-- <a href="/api/v1/user/delete/<%= user._id %>" class="btn btn-danger delete-btn"
                                                data-id="<%= user._id %>">Delete</a> -->
                                        <a href="/api/v1/user/delete/<%= user._id %>"
                                            class="btn btn-danger delete-btn">Delete</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</body>

</html>